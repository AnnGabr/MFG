<resources>

    <!-- Base application theme. -->
    <style name="GreenLightBlueTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/glb_dark_gray</item>
        <item name="colorPrimary">@color/glb_dark_blue</item>
        <item name="colorAccent">@color/glb_light_blue</item>
        <item name="android:statusBarColor">@color/glb_green</item>
        <item name="android:navigationBarColor">@color/glb_green</item>
        <item name="android:textColor">@color/glb_dark_blue</item>
        <item name="android:colorButtonNormal">@color/glb_light_blue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/glb_light_gray</item>
        <item name="android:panelBackground">@color/glb_light_gray</item>
    </style>

    <style name="PurpleAddictTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/pa_light_gray</item>
        <item name="colorPrimary">@color/glb_light_gray</item>
        <item name="colorAccent">@color/pa_light_pink</item>
        <item name="android:statusBarColor">@color/pa_dark</item>
        <item name="android:navigationBarColor">@color/pa_dark</item>
        <item name="android:textColor">@color/pa_light_peachy</item>
        <item name="android:colorButtonNormal">@color/pa_purple</item>
        <item name="android:windowBackground">@color/pa_dark</item>
        <item name="android:panelBackground">@color/pa_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
